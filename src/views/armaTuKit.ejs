            <% listado.forEach(product => { %>
                <% if (product.id_category == 3) { %>
            <div class="arma-tu-kit-item">
                <a href="../products/detail/<%= product.id %>">
                    <img class="arma-tu-kit-item__img" src="../images/termo-stanley1.jpg" alt="">
                    <div class="arma-tu-kit-item__details">
                        <p class="arma-tu-kit-item__details--title"><%= product.name %></p>
                        <p class="arma-tu-kit-item__details--subtitle">$<%= product.price %></p>
                    </div>
                </a>
            </div>
            <% } %>
            <% }) %>
        </div>

        <!-- Bolsos -->
        <div>
            <h2>Bolsos</h2>
        </div>
        <div class="arma-tu-kit__container">
            <% listado.forEach(product => { %>
                <% if (product.id_category == 4) { %>
