                <a href="../products/detail/<%= product.id %>">
                    <img class="arma-tu-kit-item__img" src="../images/bolso1.jpg" alt="">
                    <div class="arma-tu-kit-item__details">
                        <p class="arma-tu-kit-item__details--title"><%= product.name %></p>
                        <p class="arma-tu-kit-item__details--subtitle">$<%= product.price %></p>
                    </div>
                </a>
            </div>
            <% } %>
            <% }) %>
        </div>

        <div class="finish-kit">
        </div>
    </section>
    <!-- Ac치 va el include('partials/footer') -->
    <%- include('partials/footer') %>
</body>

</html>