<!DOCTYPE html>
<html lang="es">
<!-- Acá va el include('partials/head') -->
<%- include('partials/head') %>

<body>
  <!-- Acá va el include('partials/headerNavbar') -->
  <%- include('partials/headerNavbar') %>
  <section class="container-productAdd">
    <div>
      <h2 class="productAdd-title">Editando: <%= productFound.name %></h2>
    </div>
    <form class="form-productAdd" action="/products/edit/<%= productFound.id %>?_method=PUT" method="POST">
      <div class="cuerpo-productAdd">
        <div class="left-body-productAdd">
          <div class="product-name-productAdd">
            <label for="name">Nombre del producto</label>
            <br>
            <input type="text" id="name" name="name" value="<%= productFound.name %> ">
          </div>
          <div class="product-price-productAdd">
            <label for="price">Precio</label>
            <br>
            <input type="text" id="price" name="price" value="<%= productFound.price %> ">
          </div>
        </div>
        <div class="right-body-productAdd">
          <div class="product-category-productAdd">
            <label for="category">Categoría:</label>
            <br>
            <select name="id_category" id="category">
              <% categorias.forEach(categoria => { %>
                <% if (productFound.id_category == categoria.id) { %>
              <option value="<%= categoria.id %>" selected><%= categoria.name %> </option>
              <% } else { %>
              <option value="<%= categoria.id %>"><%= categoria.name %> </option>
              <% } %>
              <% }) %>
            </select>
          </div>
          <div class="product-discount-productAdd">
            <label for="discount">Descuento</label>
            <br>
            <input type="number" id="discount" name="discount" value="<%= productFound.discount %>">
          </div>
          <!-- nuevo lugar de la div -->
        </div>
          <div class="product-category-productAdd">
            <label for="category">Marca</label>
            <br>
            <select name="id_brand" id="">
              <% marcas.forEach(marca => { %>
                <% if (productFound.id_brand == marca.id) { %>
              <option value="<%= marca.id %>" selected><%= marca.name %> </option>
              <% } else { %>
              <option value="<%= marca.id %>"><%= marca.name %> </option>
              <% } %>
              <% }) %>
            </select>
          </div>
          <div class="product__image--productAdd">
            <label for="image">Imágenes</label>
            <br>
            <img src="/images/products/<%=productFound.image%>" alt="">
            <input type="file" id="image" name="image">
          </div>
        <!-- aca estaba la div -->
        <div class="product-description-productAdd">
          <label for="description">Descripción</label>
          <br>
          <textarea id="description" name="description" cols=30 rows=5><%= productFound.description %></textarea>
        </div>
        <div class="product__button--productAdd">
          <button class="store-btn-productAdd">Guardar producto</button>
        </div>
      </div>
    </form>
  </section>
  <!-- Acá va el include('partials/footer') -->
  <%- include('partials/footer') %>
</body>

</html>