<%- include('partials/head') %>

<body>
    <div class="container__register">
        <header>
            <a href="../">
                <img class="img__register" src="../images/almamate.png" alt="Logo de Alma-Mate">
            </a>
        </header>
        <div>
            <% listado.forEach(user => { %>
            <ul>
                <li><%= user.name %>
                    <a href="/users/edit/<%= user.id %> ">
                        <button class="signup__register--button">Editar</button>
                    </a>
                    <form action="/users/delete/<%= user.id %>?_method=delete" method="POST">
                        <button class="delete--button" type="submit">Eliminar</button>
                    </form>
                </li>
            </ul>
            <% }) %>
        </div>
        <!-- AcÃ¡ va el include('partials/footer') -->
        <%- include('partials/footer') %>
    </div>
</body>

</html>
